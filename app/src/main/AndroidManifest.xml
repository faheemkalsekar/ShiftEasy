<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gadgetmedia.shifteasy.mvp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.gadgetmedia.shifteasy.mvp.ShiftEasy"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.gadgetmedia.shifteasy.mvp.ui.shifts.ShiftsListActivity"
            android:label="@string/title_activity_shift"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.gadgetmedia.shifteasy.mvp.ui.shiftdetails.ShiftDetailActivity"
            android:label="@string/title_item_detail"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gadgetmedia.shifteasy.mvp.ui.shifts.ShiftsListActivity" />
        </activity>

    </application>

</manifest>